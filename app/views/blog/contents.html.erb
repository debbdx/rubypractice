<h1>Contents</h1>

<p><strong>writer</strong> : <%=@posts.writer%></p>
<p><strong>title</strong> : <%=@posts.title%></p>
<p><strong>contents</strong> : <%=@posts.contents%></p>
<p><%=@posts.updated_at%></p>
<a href="/blog/edit?id=<%=@posts.id%>">edit</a>

    <ol>
    <% @posts.comments.each do |c| %>
        <li><%=c.msg%></li>
    <% end %>
    </ol>
    
    <p>write a comment!</p>
    <%=form_tag '/comment' do%>
    <input type="hidden" name="post_id" value="<%=@posts.id%>">
    <input type="text" name="comment">
    <input type="submit">
    <% end %>
